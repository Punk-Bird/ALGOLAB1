<Window x:Class="Algorythms_Visualization.MainWindow"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Algorythms_Visualization"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="800"
        Background="Aquamarine">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Click="Button_Click" x:Name="Button" Background="LightGreen" Foreground="Black" VerticalAlignment="Top" FontSize="20" MaxWidth="550" MinWidth="100" MaxHeight="40"  MinHeight="23" Margin="5,273,313,0"  Content="Начать тест" FontStyle="Normal"  Grid.Row="1" Height="37" BorderBrush="{x:Null}"/>
        <ScottPlot:WpfPlot Background="Aquamarine" x:Name="MyPlot"  Grid.RowSpan="2" Margin="10,10,10,92" />
        <ComboBox x:Name="Combox" 
          Background="LightGray" 
          MaxWidth="950" 
          MinWidth="530" 
          MaxHeight="50" 
          MinHeight="40" 
          FontSize="18" 
          Height="40" 
          Margin="5,310,5,0" 
          Grid.Row="1" 
          VerticalAlignment="Top"
          Style="{x:Null}"
          IsEditable="True"
          IsReadOnly="True"
          Text="Выберите алгоритм">
        </ComboBox>

        <Grid Grid.Column="1" Margin="0,74,0,0" Grid.RowSpan="2" HorizontalAlignment="Right" Width="232">
            <Grid.RowDefinitions>
                <RowDefinition Height="28*"/>
                <RowDefinition Height="28*"/>
                <RowDefinition Height="28*"/>
                <RowDefinition Height="30*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height = "60"/>
                    <RowDefinition Height = "30"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding ElementName=numberOfTests, Path=Value, StringFormat='тестов: {0:F0}'}" 
           Margin="0 8 0 0"  VerticalAlignment="top" HorizontalAlignment="Left" FontSize="20" MaxHeight="60" MinHeight="40" MaxWidth="400" MinWidth="200"/>
                <Slider x:Name="numberOfTests" Grid.Row="1"  Maximum="20" Minimum="1" TickFrequency="1"   MaxHeight="40"  MinHeight="20" HorizontalAlignment="Stretch" Margin="5 0 7 0" MaxWidth="500" MinWidth="220" VerticalAlignment="Center" Foreground="#99402F"/>
            </Grid>

            <Grid x:Name="arrayBlock" Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height = "60"/>
                    <RowDefinition Height = "30"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding ElementName=arraySize, Path=Value, StringFormat='массив размером: {0:F0}'}" 
           Margin="0 8 0 0"  VerticalAlignment="top" HorizontalAlignment="Left" FontSize="20" MaxHeight="60" MinHeight="40" MaxWidth="400" MinWidth="200"/>
                <Slider x:Name="arraySize" Grid.Row="1"   MaxHeight="40"  MinHeight="20" TickFrequency="1" HorizontalAlignment="Stretch" Margin="5 0 7 0" MaxWidth="500" MinWidth="220" VerticalAlignment="Center" Foreground="#99402F"/>
            </Grid>

            <Grid x:Name="stepBlock" Grid.Column="1" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height = "60"/>
                    <RowDefinition Height = "30"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding ElementName=step, Path=Value, StringFormat='шаг размером : {0:F0}'}" 
           Margin="0 8 0 0"  VerticalAlignment="top" HorizontalAlignment="Left" FontSize="20" MaxHeight="60" MinHeight="40" MaxWidth="400" MinWidth="200"/>
                <Slider x:Name="step" Grid.Row="1" MaxHeight="40"  MinHeight="20" TickFrequency="1" HorizontalAlignment="Stretch" Margin="5 0 7 0" MaxWidth="500" MinWidth="220" VerticalAlignment="Center" Foreground="#99402F"/>
            </Grid>
            <Grid x:Name="basisBlock" Grid.Column="1" Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height = "60"/>
                    <RowDefinition Height = "30"/>
                </Grid.RowDefinitions>
                <TextBlock Text="основание: " 
            Margin="0 8 0 0"  VerticalAlignment="top" HorizontalAlignment="Left" FontSize="20" MaxHeight="60" MinHeight="40" MaxWidth="400" MinWidth="200">
                </TextBlock>
                <Slider x:Name="basis" Grid.Row="1" MaxHeight="40"  MinHeight="20" TickFrequency="1" HorizontalAlignment="Stretch" Margin="5 0 7 0" MaxWidth="500" MinWidth="220" VerticalAlignment="Center" Foreground="#99402F"/>
                <TextBox x:Name="baseText" HorizontalAlignment="Left" Margin="188,8,0,0" FontSize="20" TextWrapping="Wrap" Text="{Binding ElementName=basis, Path=Value, StringFormat='F0'}" VerticalAlignment="Top" Width="Auto" Height="35"/>
            </Grid>
        </Grid>


    </Grid>
</Window>
